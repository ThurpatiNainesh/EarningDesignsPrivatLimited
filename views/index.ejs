<%- include("layout/header") %>
<div class="container">
   <div class="row">
  <div class="col-1g-12">
    <% if(message){%>
        <div class="alert alert-dismissible fade show alert -<%= message.type %>" role="alert">
         <button class="btn-close" type="button" data-bs-dismiss="alert" arial-label="close"></button>
         <strong><%= message.message%></strong>
        </div>
    <%}%>
    <div class="table-responsive">
        <% if(users !=""){%>
            <table class=" table table-stried text-center">
                <thead>
                 <tr class="table-dark">
                     <th>ID</th>
                     <th>Image</th>
                     <th>Name</th>
                     <th>E-mail</th>
                     <th>Phone</th>
                     <th>Action</th>
                 </tr>
                </thead>
                <tbody>
                 <% for(let user of users){ %>
            <tr class="align-middle">
                <td><=index%></td>
                <td><img src="<%= row.image%>" width="50"class="img-thumbnail" ></td>
                <td><=row.name%></td>
                <td><=row.email%></td>
                <td><=row.phone%></td>
               <td>
             <a href="/edit/<%= row._id%>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
             <a href="/delete/<%= row._id%>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                 </td>
            </tr>
                 <%}%>
                </tbody>
             </table>
        <%} else {%>
            <h1 class="text-center text-secondary mt-5">no users found in database</h1>
        <%}%>
    </div>
  </div>
   </div>
</div>
<%- include("layout/footer") %>

